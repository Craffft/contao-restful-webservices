{
    "name": "craffft/contao-restful-webservices",
    "description": "RESTful Webservices for Contao OpenSource CMS",
    "keywords": ["contao", "rest", "webservice", "interface", "data"],
    "type": "contao-module",
    "homepage": "http://craffft.de",
    "license": "LGPL-3.0+",
    "authors": [
        {
            "name": "Daniel Kiesel",
            "email": "daniel@craffft.de",
            "homepage": "http://craffft.de",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/Craffft/contao-restful-webservices/issues",
        "source": "https://github.com/Craffft/contao-restful-webservices"
    },
    "require": {
        "php": ">=5.3.2",
        "contao/core": ">=3.2,<3.3-dev",
        "contao-community-alliance/composer-installer": "*",
        "contao-legacy/haste": "*"
    },
    "autoload": {
        "classmap": ["interface/", "system/"]
    },
    "replace": {
        "contao-legacy/restful-webservices": "*"
    },
    "extra": {
        "contao": {
            "sources": {
                "interface": "interface",
                "system/modules/restful-webservices": "system/modules/restful-webservices"
            }
        }
    }
}
